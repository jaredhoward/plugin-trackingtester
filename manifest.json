{
  "manifest_version": 2,
  "name": "Rakuten Marketing tracking tester",
  "description": "This plugin will take note of all the Rakuten Marketing tracking bits.",
  "version": "0.2",
  "browser_action": {
    "default_icon": "150320_Rakuten.png",
    "default_popup": "popup.html",
    "default_title": "Rakuten Marketing"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "webNavigation",
    "activeTab"
  ]
}
