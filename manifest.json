{
  "manifest_version": 2,
  "name": "Rakuten Marketing tracking tester",
  "description": "This plugin will take note of all the Rakuten Marketing tracking bits.",
  "version": "0.2.1",
  "browser_action": {
    "default_icon": "150320_Rakuten.png",
    "default_popup": "popup.html",
    "default_title": "Rakuten Marketing"
  },
  "icons": {
    "255": "150320_Rakuten.png"
  },
  "permissions": ["background", "tabs", "activeTab", "webRequest", "webRequestBlocking", "<all_urls>"],
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  }
}
